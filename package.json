{
  "name": "saas-ui-pro",
  "version": "0.0.1-beta",
  "description": "The frontend stack for SaaS companies",
  "repository": "git@github.com:saas-js/saas-ui-pro.git",
  "author": "Eelco Wiersma <eelco@appulse.nl>",
  "license": "https://saas-ui.dev/license",
  "private": true,
  "scripts": {
    "prepare": "husky install",
    "dev:web": "yarn workspace web dev",
    "dev:desktop": "yarn workspace desktop dev",
    "storybook": "yarn workspace @ui/storybook dev",
    "build:web": "yarn workspace web build",
    "build:desktop": "yarn workspace web build",
    "build:storybook": "yarn workspace @ui/storybook build-storybook",
    "build:tokens": "chakra-cli tokens packages/ui-theme/src/index.ts",
    "clean:packages": "turbo run clean",
    "eslint": "eslint --cache --cache-location=node_modules/.cache/.eslintcache --fix",
    "lint": "yarn run eslint . --ext .js,.jsx,.ts,.tsx",
    "lint:staged": "lint-staged --allow-empty --config lint-staged.config.js",
    "typecheck": "tsc --noEmit",
    "saas-ui:build": "turbo run build --scope='@saas-ui-pro/*' --concurrency=5 --no-deps --continue",
    "saas-ui:storybook": "yarn workspace saas-ui-storybook-pro dev",
    "saas-ui:publish": "yarn workspaces foreach -p --from '@saas-ui-pro/*' npm publish && yarn changeset tag",
    "saas-ui:publish:next": "yarn workspaces foreach -p --from '@saas-ui-pro/*' npm publish --tag next && yarn changeset tag"
  },
  "workspaces": [
    "saas-ui/*",
    "packages/*",
    "apps/*"
  ],
  "devDependencies": {
    "@chakra-ui/cli": "^2.4.1",
    "@changesets/cli": "^2.26.2",
    "@formatjs/cli": "^5.1.13",
    "@types/node": "^18.18.0",
    "@types/react": "18.2.23",
    "@types/react-dom": "18.2.8",
    "@typescript-eslint/eslint-plugin": "^6.7.3",
    "@typescript-eslint/parser": "^6.7.3",
    "eslint": "^8.50.0",
    "eslint-config-prettier": "^8.10.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-cypress": "^2.15.1",
    "eslint-plugin-import": "^2.28.1",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "lint-staged": "^13.3.0",
    "prettier": "^2.8.8",
    "rimraf": "^4.4.1",
    "ts-node": "^10.9.1",
    "turbo": "^1.10.14",
    "typescript": "^5.1.6"
  },
  "resolutions": {
    "@types/react": "18.2.14",
    "@hookform/resolvers": "3.1.0",
    "react-hook-form": "7.43.9",
    "react-inspector": "^6.0.1",
    "@mdx-js/react": "^2.1.5",
    "react-element-to-jsx-string": "^15.0.0",
    "intl-messageformat": "10.3.5"
  },
  "packageManager": "yarn@3.3.0"
}
