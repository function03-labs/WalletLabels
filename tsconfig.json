{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next",
      },
    ],
    "paths": {
      "@/*": ["./*"],
      "@component/*": ["./components/*"],
      "@style/*": ["./styles/*"],
      "@utils/*": ["./utils/*"],
      "@hook/*": ["./hooks/*"],
      "@fonts/*": ["./fonts/*"],
      "@lib/*": ["./lib/*"],
      "@types/*": ["./types/*"],
      "@config/*": ["./config/*"],
    },
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"],
}
